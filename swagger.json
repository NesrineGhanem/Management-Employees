  "definitions": {
    "User": {
      "required": [
        "firstName","LastName", "email", "role","building","phone"],
      "type": "object",
      "properties": {
        
        "firstName": {
          "type": "string",
          "example": "nina"
        },
        "LastName": {
          "type": "string",
          "example": "nounou"
        },
        
        "email": {
          "type": "string",
          "example": "nounou@email.com"
        },
        "password": {
          "type": "string",
          "example": "12345"
        },
        "phone": {
          "type": "string",
          "example": "2345"
        },
        "role": {
          "type": "string",
          "example": "Software Engineer",
          "enum": [
            "Director",
            "Administration Director",
            "Administration Assistant",
            "Team manager",
            "Software Engineer",
            "Super Admin"
          ]
        },
        "building": {
          "type": "string",
          "example": "Front-End",
          "enum": [
            "Front-End",
            "Back-End",
            "Full-Stack",
            "Super-Admin"
          ]
        },

        "avatar": {
          "type": "string",
          "example": "12345"
        },

        " isActive": {
          "type": "boolean",
          "example": "trus"
        },
        "soldDays" : {
          "type" : "Number",
          "default" : "0"
        },
        "allDaysoff" : {
          "type" : "Number",
          "default" : "0"
        },
        "daysOffSick" : {
          "type" : "Number",
          "default" : "0"
        }
         
      },
